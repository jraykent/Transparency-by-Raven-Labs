{
  "manifest_version": 3,
  "name": "Transparency by Raven Labs",
  "description": "Understand what you're reading with one click.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "popup/raven-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "popup/raven-icon.png"
  }
}